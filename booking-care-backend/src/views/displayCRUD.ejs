<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Get CRUD</title>
    </head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th,
        td {
            padding: 5px;
            text-align: center;
        }
        .btn-edit {
            background-color: green;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
            margin-right: 10px;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
        }
        .btn-delete {
            background-color: red;
            color: white;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
        }
    </style>
    <body>
        get crud from view
        <table style="width: 100%">
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Sex</th>
                <th>roleId</th>
                <th>Action</th>
            </tr>
            <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%=dataTable[i].email %></td>
                <td><%=dataTable[i].firstName %></td>
                <td><%=dataTable[i].lastName %></td>
                <td><%=dataTable[i].address %></td>
                <td><%=dataTable[i].phoneNumber %></td>
                <td><%=dataTable[i].gender %></td>
                <td><%=dataTable[i].roleId %></td>
                <td>
                    <a
                        href="/edit-crud?id=<%= dataTable[i].id %>"
                        class="btn-edit"
                        type="button"
                        >Edit</a
                    ><a
                        href="/delete-crud?id=<%= dataTable[i].id %>"
                        class="btn-delete"
                        type="button"
                        >Delete</a
                    >
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>
